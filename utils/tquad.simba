{$DEFINE WL_TQUAD_INCLUDED}
{$IFNDEF WL_UTILS}
  {$I WaspLib/utils.simba}
{$ENDIF}

function TQuad.GeTCuboid(): TCuboid;
begin
  Result := Self.ToTPA().ConvexHull();
end;

//This will get the maximum area possible polygon inside 2 rectangles
function TQuad.GeTCuboid(other: TQuad): TCuboid; overload;
var
  tpa: TPointArray;
begin
  tpa := Self.ToTPA() + other.ToTPA();
  Result := tpa.ConvexHull();
end;
