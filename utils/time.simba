{$DEFINE WL_TIME_INCLUDED}
{$IFNDEF WL_UTILS}
  {$I WaspLib/utils.simba}
{$ENDIF}

procedure TCountDown.Restart(randMin, randMax: Int32; waitDir: EWaitDir = wdMean); overload;
begin
  case waitDir of
    wdLeft:  Self.Restart(RandomLeft(randMin, randMax));
    wdMean:  Self.Restart(RandomMean(randMin, randMax));
    wdRight: Self.Restart(RandomRight(randMin, randMax));
  end;
end;
